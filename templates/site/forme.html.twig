{% extends 'base.html.twig' %}
{% block title %}TOPISCINE - Devis - Forme{% endblock %}

{% block class1 %}{% endblock %}
{% block class2 %}border_section{% endblock %}
{% block class3 %}{% endblock %}


{% block body %}
    <div id="barre-devis" class="container-fluid mb-4 pt-2">
        <div class="row">
            <div class="col-md-12 text-center p-0 ">
                <h2>Faire un devis</h2>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 0%"
                         aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="devis" class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h5>Choix de la forme de la piscine</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center align-items-center ">
                <button id="rectangulaire" class="img-devis btn border border-light rounded">
                    <h6 class="text-center ">Rectangulaire</h6>
                </button>
            </div>

            <div class="col-md-6 d-flex justify-content-center align-items-center">

                <button id="ronde" class="img-devis btn border border-light rounded-circle">
                    <h6 class="text-center ">Ronde</h6>
                </button>


            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center mb-3 mt-3">
                <a href="{{ path('fond') }}">
                    <button id="submit" type="submit" class="btn btn-success">Suivant</button>
                </a>
            </div>
        </div>

    </div>

{% endblock %}
